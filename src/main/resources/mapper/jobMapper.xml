<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nwpn.mapper.JobMapper">

    <select id="getJobs" resultType="job">
        select * from job
    </select>

    <select id="getJobByLikedName" resultType="job">
        select * from job where name like "%"#{name}"%"
    </select>

    <insert id="insert" parameterType="job">
        insert into job value (#{id},#{name},#{min_salary},#{max_salary},#{description},#{area},#{limit_condition})
    </insert>
    <delete id="delete" parameterType="int">
        delete from job where id = #{id}
    </delete>
    <update id="update" parameterType="job">
        update job where id = #{id} set id=#{id},name=#{name},min_salary=#{min_salary},max_salary=#{max_salary},description=#{description},area=#{area},limit_condition=#{limit_condition}
    </update>

</mapper>